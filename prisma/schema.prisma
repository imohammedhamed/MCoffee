generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

// User model
model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  password  String
  fullName  String
  phone     String
  profile   Profile?
  addresses Address[]
  orders    Order[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
}

// Profile model
model Profile {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  userId  String  @unique @db.ObjectId
  picture String?
  user    User    @relation(fields: [userId], references: [id])
}

// Address model
model Address {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  userId          String  @db.ObjectId
  area            String
  streetName      String?
  buildingType    String?
  buildingNumber  String
  floorNumber     String?
  apartmentNumber String
  mobileNumber    String
  user            User    @relation(fields: [userId], references: [id])
}

// Category model
model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  items Item[]
}

// Item model
model Item {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  picture     String
  price       Float
  categoryId  String       @db.ObjectId
  category    Category     @relation(fields: [categoryId], references: [id])
  preferences Preference[]
}

// Preference model
model Preference {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  size       String
  coffeeType String
  extraShot  String?
  milkType   String
  itemId     String  @db.ObjectId
  item       Item    @relation(fields: [itemId], references: [id])
}

// Order model
model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  items     Json
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])
}
